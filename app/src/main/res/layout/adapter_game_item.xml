<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView android:id="@+id/home_logo_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bc"/>

            <TextView android:id="@+id/home_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BC Lions"
                android:textColor="#fff"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center_vertical|center_horizontal">

            <TextView android:id="@+id/middle_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="6/25"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="22sp"
                />

            <TextView android:id="@+id/middlelow_textview"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="4.30pm"
                      android:gravity="center_horizontal"
                      android:textColor="#fff"
                      android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView android:id="@+id/away_logo_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/argos" />

            <TextView android:id="@+id/away_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Argonauts"
                android:textColor="#fff"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>