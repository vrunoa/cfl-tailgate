<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                tools:context="com.cfltailgate.android.GameActivity">

    <!-- score area -->

    <!--
    <include
        layout="@layout/adapter_game_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/away_name_textview"
                      android:text="Toronto Argonauts"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/away_score_textview"
                      android:layout_alignParentRight="true"
                      android:text="17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/home_name_textview"
                      android:text="BC Lions"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
            <TextView android:id="@+id/home_score_textview"
                      android:layout_alignParentRight="true"
                      android:text="20"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

    <!-- play-by-play area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Play-by-play" />

        <ListView android:id="@+id/plays_listview"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

    <!-- bets area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Bets" />

        <ListView android:id="@+id/bets_listview"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
